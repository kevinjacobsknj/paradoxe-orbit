# Glass Desktop Assistant Environment Configuration
# Copy this file to .env and configure the values for your environment

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# Deepgram API Key for speech-to-text functionality
# Get your key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI language setting for transcription (optional, defaults to 'en')
OPENAI_TRANSCRIBE_LANG=en

# Apple Developer credentials for app notarization (macOS builds only)
APPLE_ID=your_apple_developer_email
APPLE_ID_PASSWORD=your_app_specific_password
APPLE_TEAM_ID=your_apple_team_id

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API server configuration
pickleglass_API_URL=http://localhost:9001
pickleglass_API_TIMEOUT=10000

# Web server configuration
pickleglass_WEB_URL=http://localhost:3000

# Agent daemon URL for external agent communication
AGENT_DAEMON_URL=http://localhost:4823
AGENT_HEALTH_TIMEOUT=2000
AGENT_TASK_TIMEOUT=10000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment mode (development, production, test)
NODE_ENV=development

# JWT authentication settings
pickleglass_ENABLE_JWT=false

# Caching configuration
pickleglass_CACHE_TIMEOUT=300000

# Logging configuration
pickleglass_LOG_LEVEL=info
pickleglass_DEBUG=true

# =============================================================================
# RUNTIME CONFIGURATION (Auto-generated, do not modify)
# =============================================================================

# These are set automatically at runtime, do not modify
# pickleglass_API_PORT=
# pickleglass_WEB_PORT=

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. The DEEPGRAM_API_KEY is required for push-to-talk speech-to-text functionality
# 2. Apple credentials are only needed if you plan to build and notarize macOS distributions
# 3. Most pickleglass_* variables have sensible defaults and can be left unchanged
# 4. Set NODE_ENV=production for production builds
# 5. Enable JWT by setting pickleglass_ENABLE_JWT=true if needed